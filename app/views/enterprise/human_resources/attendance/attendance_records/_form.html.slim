div.col-md-6
  - unless @employee_id.present?
    = model_selector(f,
            Employee,
            :employee_id,
            current_instance.employee,
            'designation')
    br
  - else
    = f.input :employee_id,
            :as => :hidden,
            :input_html => {:value => @employee_id}

  = input_word(f, :remark)

div.col-md-6

  = f.input :date_of_attendance, input_html: { 'data-parsley-date-of-attendance' => '0' }, required: true, as: :date, html5: true
  = f.input :time_in, input_html: { 'data-parsley-time-in' => '0' }, as: :time, required: true, html5: true
  = f.input :time_out, input_html: { 'data-parsley-time-out' => '0' }, as: :time, required: true, html5: true