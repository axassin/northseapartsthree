div.resource_item_options
  a.btn.btn-default.btn-xs.fa.fa-eye data-toggle="tooltip" data-animation="false" title="Examine" href='#{@main_resource_path + '/' + result.id}'
  a.btn.btn-default.btn-xs.fa.fa-pencil data-toggle="tooltip" data-animation="false" title="Edit" href='#{@main_resource_path + '/' + result.id + '/edit'}'
  a.btn.btn-default.btn-xs.fa.fa-trash data-toggle="tooltip" data-animation="false" title="Delete" href='#{@main_resource_path + '/' + result.id}' data-method="DELETE" onclick="return confirm('Are you sure you want to delete this item?')"