  humanized_name = camel_to_human(name)
  selected.present? ? selected = selected.id : selected = nil
  data_parsley_hash = Hash.new

div.model_selector_group
  label.outside_label.string.required #{humanized_name.upcase}
  = f.input name,
          collection: model.all,
          prompt: 'Select ' + humanized_name,
          selected: selected,
          label: false,
          required: true,
          label_method: label_method.to_sym,
          value_method: value_method.to_sym,
          disabled: disabled,
          input_html: data_parsley_hash
  div
    a.btn.btn-default.add_model_select target='_new' href="#{ model.main_resource_path + '/new' }" #{'Add New ' + humanized_name}

